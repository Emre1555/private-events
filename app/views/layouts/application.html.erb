<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>

  </head>

  <body class="bg-slate-100">

    <%= render "layouts/navbar" %>

  <% unless notice.nil?%>
    <div class="clear-both p-4 mb-4 text-sm text-yellow-700 bg-yellow-100 rounded-lg dark:bg-yellow-200 dark:text-yellow-800" role="alert">
      <span class="font-medium"><%= notice %></span>
    </div>
  <% end %>

  <% unless alert.nil?%>
    <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
      <span class="font-medium"> <%= alert %> </span>
    </div>
  <% end %>

    
    <main class="container mx-auto mt-28">
      <%= yield %>
    </main>

  </body>
</html>
