

<div class="flex flex-col">
    <div class="m-2 p-6 bg-white rounded-lg border border-gray-200 shadow-md basis-[30%] w-2/4 justify-center">

    <% if @event.errors.any? %>
        <% @event.errors.full_messages.each do |message|%>
         <h3 class="text-red-500"><%= message %></h3>
     <% end %>
    <% end %>

        <h2 class="text-2xl"> Create a new event </h2><br>
        <%= form_with method: :post, model: @event do |form| %>

            <%= form.text_field :name, placeholder: "Event Name", class: "block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %> <br>

            <%= form.text_field :location, placeholder: "Event Location", class: "block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %>

            <%= form.date_select :date, placeholder: "Event Date", class: "block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %> 

            
            <%= form.submit "Create", class: "my-4 w-full text-center py-3 rounded bg-purple-500 text-white hover:bg-purple-400 focus:outline-none my-1 cursor-pointer"%>
            
        <% end %>
    </div>
</div>