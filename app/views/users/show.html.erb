


<h3 class="text-xl"><%= @user.nickname %> Created</h3><br>


<div class="flex flex-row flex-wrap">
<%if @user.created_events.any?%>
  <% @user.created_events.each do |event| %>

     <div class="m-2 p-6 bg-white rounded-lg border border-gray-200 shadow-md basis-[30%]">
      <div class="flex justify-between">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"> <%= event.name %> </h5>
          <% if event.creator == current_user %>
            <%= button_to "Delete", event_path(event) , method: :delete, class: "h-10 px-5 text-red-700 transition-colors duration-150 border border-red-500 rounded-lg focus:shadow-outline hover:bg-red-500 hover:text-red-100"  %>
          <% end %>
         </div> 
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"> <%= event.location%> </p>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"> <%= event.date%> </p>
      <%= link_to event_path(event) do %>
          <button class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-purple-500 rounded-lg hover:bg-purple-400 focus:ring-4 focus:outline-none focus:ring-purple-300">
         Event Details
        <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
          </button>
        <%end %>
    </div>
  <%end%>
<%else%>
  <p class="mb-5">No events created yet</p>
<%end%>
</div>



<h3 class="text-xl mt-8"><%= @user.nickname %> is Attending</h3>

<div class="flex flex-row flex-wrap mt-5">

<% if @user.attended_events.any? %>
 <% @user.attended_events.each do |event| %>
  <div class="m-2 p-6 bg-white rounded-lg border border-gray-200 shadow-md basis-[30%]">
    <div class="flex justify-between">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"> <%= event.name %> </h5>
          <% if event.creator == current_user %>
            <%= button_to "Delete", event_path(event) , method: :delete, class: "h-10 px-5 text-red-700 transition-colors duration-150 border border-red-500 rounded-lg focus:shadow-outline hover:bg-red-500 hover:text-red-100"  %>
          <% end %>
         </div> 
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"> <%= event.location%> </p>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"> <%= event.date%> </p>
    <%= link_to event_path(event) do %>
      <button class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-purple-500 rounded-lg hover:bg-purple-400 focus:ring-4 focus:outline-none focus:ring-purple-300">
         Event Details
        <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
      </button>
    <% end %>
  </div>
  <% end %>
<% else %>
  <p> <%= @user.nickname %> is not attending any events </p>
<%end%>

</div>

