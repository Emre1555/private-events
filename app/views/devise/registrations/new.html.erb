
<div class="bg-grey-lighter min-h-screen flex flex-col ">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">

    <div class="flex-row basis-1/3 bg-white max-w-sm justify-center rounded-lg shadow-lg text-black ">
      <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full ">
        <h2 class="mb-2 text-2xl text-center py-2">Sign Up</h2>


<div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


        <div class="field">
        <%= f.text_field :nickname, autofocus: true, placeholder: "Username", class: " block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %>
        </div>


          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: " block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %>
          </div>



  <div class="field">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (min 6 characters)", class: " block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: " block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <div class="actions w-full text-center py-3 rounded bg-purple-500 text-white hover:bg-purple-400 focus:outline-none my-1">
    <%= f.submit "Sign up" %>
  </div>

<% end %>
  </div>



<%= render "devise/shared/links" %>