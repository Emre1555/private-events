
<div class="bg-grey-lighter min-h-screen flex flex-col ">
<div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">

  <div class="flex-row basis-1/3 bg-white max-w-sm justify-center rounded-lg shadow-lg text-black ">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h2 class="mb-2 text-2xl text-center py-3 ">Login</h2>



<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: " block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: " block rounded-lg border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field py-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions w-full text-center py-3 rounded bg-blue-600 text-white hover:bg-blue-800 focus:outline-none my-1" >

    <%= f.submit "Log in"%>

  </div>



<% end %>
<%= render "devise/shared/links" %>

</div>
  </div>
</div>

</div>